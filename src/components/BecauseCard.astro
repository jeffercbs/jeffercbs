---
type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<article
  class="relative border border-dashed border-white/50 text-white px-6 py-8 hover:animate-fade-in duration-1000 animate-ease-in-out"
>
  <div class="absolute top-0 left-0 w-3 h-3 border-t-2 border-l-2 border-white">
  </div>
  <div
    class="absolute top-0 right-0 w-3 h-3 border-t-2 border-r-2 border-white"
  >
  </div>

  <h2 class="text-xl font-bold uppercase text-gray-200 mb-3" set:text={title} />

  <p class="text-gray-300" set:text={description} />
  <div
    class="absolute bottom-0 right-0 w-3 h-3 border-b-2 border-r-2 border-white"
  >
  </div>

  <div
    class="absolute bottom-0 left-0 w-3 h-3 border-b-2 border-l-2 border-white"
  >
  </div>
</article>
