---
import { Icon } from "astro-icon/components";
import type { HTMLAttributes } from "astro/types";

interface Props extends Omit<HTMLAttributes<"a">, "title"> {
  title: string;
}

const { title, ...attributes } = Astro.props;
---

<a
  {...attributes}
  class="flex group justify-between gap-2 border rounded-2xl p-4 not-prose mb-2"
>
  <div class="flex flex-col gap-1">
    <span
      class="text-white group-hover:text-secondary ease-in-out transition-colors text-xl font-medium"
      set:html={title}
    />
    <div class="*:text-base">
      <slot />
    </div>
  </div>
  <Icon
    name="arrow-up-right"
    size="1.333em"
    class="group-hover:translate-x-2 group-hover:-translate-y-2 group-hover:scale-110 ease-in-out transition-transform"
  />
</a>
