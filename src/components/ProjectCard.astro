---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

type Props = CollectionEntry<"projects">;

const {
  data: { title, image, cols, rows, type },
  id,
} = Astro.props;
---

<a
  href={`/project/detail/${id}`}
  class:list={[
    "group min-h-60",
    { "md:col-span-2 col-span-1": cols === 2 },
    { "row-span-2": rows === 2 },
    { "row-span-1": rows !== 2 },
  ]}
>
  <article
    class="relative p-1 hover: shadow-2xl size-full bg-white/5 border border-white/10 hover:bg-white/10 rounded-lg overflow-hidden"
  >
    <Image
      src={image}
      alt={`imagen del proyecto ${title}`}
      width={400}
      height={500}
      class="aspect-video rounded-lg size-full object-center object-cover"
    />

    <div
      class:list={["absolute inset-0 rounded-lg grid place-content-start p-4"]}
    >
      <div
        class="flex items-center gap-2 border-2 border-white/50 px-2 py-1 rounded-full bg-black/30 backdrop-blur-md"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-5"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="m3.75 13.5 10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75Z"
          >
          </path>
        </svg>

        <small>{type} </small>
      </div>
    </div>
  </article>
</a>
